			<pos>0.829 0.574</pos>
			<fontSize>0.035</fontSize>
		</text>
		
		<textlist name="gamelist">
			<pos>0.034 0.235</pos>
			<size>0.933 0.647</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./art/font.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<selectorColor>350648</selectorColor>
			<selectedColor>bc14ff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>871F78</secondaryColor>
			<forceUppercase>0</forceUppercase>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">
	
		<helpsystem name="help">
			<pos>0.012 0.960</pos>
