<theme>
    <formatVersion>3</formatVersion>

	<view name="system">
	
		<helpsystem name="help">
			<pos>0.012 0.960</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./art/font.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</helpsystem>
		
		<image name="backgroundLogo" extra="true">
			<path>./art/systemfront.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
			<tile>false</tile>
		</image>
		
	</view>
	
    <view name="basic">

		<helpsystem name="help">
			<pos>0.012 0.960</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./art/font.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</helpsystem>
		
